{
  "mcpServers": {
    "mcp-conductor": {
      "command": "deno",
      "args": [
        "run",
        "--no-prompt",
        "--allow-read",
        "--allow-write",
        "--allow-net",
        "--allow-env",
        "--allow-run",
        "src/cli/cli.ts",
        "stdio"
      ],
      "env": {
        "MCP_CONDUCTOR_RUN_ARGS": "allow-all"
      }
    },
    "mcp-conductor-jsr": {
      "command": "deno",
      "args": [
        "run",
        "--no-prompt",
        "--allow-read",
        "--allow-write",
        "--allow-net",
        "--allow-env",
        "--allow-run",
        "jsr:@conductor/mcp",
        "stdio"
      ]
    }
  }
}
