{
  "name": "@conductor/mcp",
  "version": "0.1.0",
  "description": "Secure Deno code execution for AI agents via Model Context Protocol. Execute TypeScript/JavaScript in isolated, permission-controlled sandboxes.",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/niradler/mcp-conductor"
  },
  "keywords": [
    "mcp",
    "model-context-protocol",
    "deno",
    "security",
    "sandbox",
    "code-execution",
    "ai",
    "llm",
    "typescript",
    "javascript"
  ],
  "exports": {
    ".": "./src/cli/cli.ts",
    "./server": "./src/server/main.ts"
  },
  "tasks": {
    "dev": "deno run --allow-all --watch src/cli/cli.ts",
    "start": "deno run --allow-all src/cli/cli.ts",
    "test": "deno test --allow-all",
    "test:watch": "deno test --allow-all --watch",
    "coverage": "deno test --allow-all --coverage=coverage",
    "lint": "deno lint",
    "fmt": "deno fmt",
    "check": "deno check src/**/*.ts",
    "build": "deno run --allow-all scripts/build_npm.ts",
    "publish": "deno run --allow-all scripts/publish.ts"
  },
  "imports": {
    "@std/assert": "jsr:@std/assert@^1",
    "@std/testing": "jsr:@std/testing@^1",
    "@std/cli": "jsr:@std/cli@^1",
    "@modelcontextprotocol/sdk": "npm:@modelcontextprotocol/sdk@^1.0.4"
  },
  "compilerOptions": {
    "strict": true,
    "lib": [
      "deno.window",
      "deno.ns"
    ]
  },
  "lint": {
    "rules": {
      "tags": [
        "recommended"
      ]
    }
  },
  "fmt": {
    "useTabs": false,
    "lineWidth": 100,
    "indentWidth": 2,
    "semiColons": false,
    "singleQuote": true
  },
  "publish": {
    "exclude": [
      "tests/",
      ".cursor/",
      "examples/",
      "coverage/"
    ]
  }
}